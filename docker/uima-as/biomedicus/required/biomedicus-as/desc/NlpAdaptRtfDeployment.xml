<analysisEngineDeploymentDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>NlpAdapt RTF Pipeline Engine</name>
    <description>Deployment using BioMedICUS to convert RTF to plaintext</description>
    <version>${project.version}</version>
    <vendor>${project.organization.name}</vendor>

    <deployment protocol="jms" provider="activemq">
        <casPool numberOfCASes="200"/>
        <service>
            <inputQueue endpoint="nlpadapt.rtf.outbound" brokerURL="nio://localhost:61616" prefetch="32"/>
            <topDescriptor>
                <import location="ae/NlpAdaptRtfPipeline.xml"/>
            </topDescriptor>
            <analysisEngine async="false">
                <scaleout numberOfInstances="32"/>
            </analysisEngine>
        </service>
    </deployment>
</analysisEngineDeploymentDescription>
