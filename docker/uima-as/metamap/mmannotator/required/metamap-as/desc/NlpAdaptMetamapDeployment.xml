<analysisEngineDeploymentDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>NlpAdapt MetaMap Pipeline Engine</name>
    <description>MetaMap Pipeline Deployment</description>
    <version>${project.version}</version>
    <vendor>${project.organization.name}</vendor>

    <deployment protocol="jms" provider="activemq">
        <casPool numberOfCASes="32"/>
        <service>
            <inputQueue endpoint="nlpadapt.metamap.outbound" brokerURL="nio://localhost:61616" prefetch="32"/>
            <topDescriptor>
                <import location="ae/NlpAdaptMetamapPipeline.xml"/>
            </topDescriptor>
            <analysisEngine async="false">
                <scaleout numberOfInstances="32"/>
            </analysisEngine>
        </service>
    </deployment>
</analysisEngineDeploymentDescription>
